<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tc.rewards.mapper.ActivitiesMapper">

	<select id="findActivitiesById" resultType="activities" parameterType="String">
			select id,name,number,type_id typeId,exchange_id exchangeId
			from activities
			where id=#{id}
	</select>

	<select id="insertActivitiesById" parameterType="activities">
			insert into activities(id,name,number,type_id,exchange_id)
			values(#{id},#{name},#{number},#{typeId},#{exchangeId})
	</select>
	
	<select id="deleteActivitiesById" parameterType="String">
			delete from activities
			where id=#{id}
	</select>

</mapper>